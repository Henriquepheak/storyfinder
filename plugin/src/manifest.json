{
  "manifest_version": 2,
  "name": "Storyfinder",
  "version": "0.0.8",
  "author": "Language Technology Group - University of Hamburg",
  "description": "Graph based information and knowledge management of websites and entities.",
  "homepage_url": "https://github.com/uhh-lt/storyfinder",
  "icons": {
    "48": "icon-48.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "<all_urls>",
    "contextMenus",
    "webNavigation"
  ],

  "browser_action": {
    "default_popup": "menu.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "contentstyle.css"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": [
      "backgroundscript.js"
    ]
  },

  "web_accessible_resources":
  [
    "popup.html"
  ]

}
