{
  "manifest_version": 2,
  "name": "Storyfinder",
  "version": "0.0.4",
  "author": "Manuel Kaufmann",

  "description": "Using graphs to improve the understanding of text on websites",
  "homepage_url": "https://github.com/uhh-lt/storyfinder",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "applications": {
    "gecko": {
      "id": "storyfinder@lt.informatik.tu-darmstadt.de"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "<all_urls>",
    "contextMenus"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.de/*"],
      "js": ["content_scripts/contentscript.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "sidebar_action": {
    "default_title": "Storyfinder",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/sidebar_icon.png"
  },

  "background": {
    "scripts": [
      "my-background.js",
      "contextmenu.js"
    ]
  }
}
